# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key

# Google Cloud Vision API
GOOGLE_CLOUD_VISION_API_KEY=your_google_vision_api_key
GOOGLE_APPLICATION_CREDENTIALS=./path_to_service_account.json

# Google Cloud Vision API for Vercel (サービスアカウントキーのJSON全体)
# ローカルではGOOGLE_APPLICATION_CREDENTIALSを使用
# Vercelでは以下の環境変数にサービスアカウントキーのJSON全体をセット
GOOGLE_CLOUD_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project-id","private_key_id":"your-key-id",...}

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# App Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=your_random_secret_key_32_chars_min
NEXTAUTH_URL=http://localhost:3000

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Pricing Plans (Stripe Price IDs)
STRIPE_PRICE_ID_PRO=price_1xxxxxxxxxxxxx
STRIPE_PRICE_ID_PREMIUM=price_1xxxxxxxxxxxxx
